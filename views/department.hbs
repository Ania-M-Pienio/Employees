<div class="row">
    <div class="col-md-12">
        <h2>{{department.departmentName}} - Department: {{department.departmentId}}</h2>
        <hr />
        <form method="post" action="/department/update">                
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="departmentName">Department Name</label> <br/>
                                            <input class="form-control" id="departmentId" name="departmentName" type="text" value="{{department.departmentName}}" />
                                        </div>
                                    </div>
                                </div>                          
                            </fieldset>              
                            <hr/>  
                <input type="hidden" id="departmentId" name="departmentId" value="{{department.departmentId}}">                         
                <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />           
        </form>
    </div>
</div>